<Window x:Class="Clicker12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker12"
        mc:Ignorable="d"
    Title="MainWindow" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,369,0" Grid.RowSpan="2">
            <Label Content="List of enemies:"/>
            <ListBox Height="300"/>
            <UniformGrid Columns="2">
                <Button Content="Save" Background="Coral"/>
                <Button Content="Load" Background="Bisque"/>
            </UniformGrid>
        </StackPanel>

        <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,246,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="2">
                <StackPanel>
                    <Label Content="Enemy icon:"/>
                    <Image Name="EnemyIcon" Height="100" Width="100" Margin="20"/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Icon name:" Height="30"/>
                    <ComboBox/>
                    <Label Content="Enemy Name:" Height="30"/>
                    <TextBox Height="30"/>
                </StackPanel>
            </UniformGrid>

            <UniformGrid Grid.Row="1" Rows="2" Columns="2">
                <StackPanel>
                    <Label Content="Base life:"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Base gold:"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Life modifier:"/>
                    <TextBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Gold modifer:"/>
                    <TextBox/>
                </StackPanel>
            </UniformGrid>
            <StackPanel Grid.Row="2">
                <Label Content="Spawn chance (1-100):"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="160"/>
                    <Button Content="Add" Width="80" Margin="0,0,20,0" Background="Coral"/>
                    <Button Content="Remove" Width="80" Background="Bisque" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <ListBox Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="IconListBox"
                 SelectionMode="Single" SelectionChanged="IconListBox_OnSelectionChanged">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding IconPath}" Width="100" Height="100"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
