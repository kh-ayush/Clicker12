<Window x:Class="Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clicker" Height="550" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enemy name:" FontSize="16"/>
            <TextBlock x:Name="EnemyNameText" FontSize="16" Margin="0,5,0,10"/>

            <TextBlock Text="Enemy hit point:" FontSize="16"/>
            <TextBlock x:Name="EnemyHPText" FontSize="16" Margin="0,5,0,10"/>

            <TextBlock Text="Gold from enemy:" FontSize="16"/>
            <TextBlock x:Name="EnemyGoldText" FontSize="16" Margin="0,5,0,20"/>

            <Image x:Name="EnemyImage" Source="enemy.png" Width="150" Height="150" Margin="0,5,0,10"/>
            <Button x:Name="AttackButton" Content="Click to deal damage" Width="180" Height="40" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="RepeatButton" Content="Repeat" Width="100" Margin="10,0"/>
                <Button x:Name="NextButton" Content="Next" Width="100" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Level:" FontSize="16"/>
            <TextBlock x:Name="PlayerLevelText" Text="1" FontSize="16" Margin="0,5,0,10"/>

            <TextBlock Text="Player's gold:" FontSize="16"/>
            <TextBlock x:Name="PlayerGoldText" Text="0" FontSize="16" Margin="0,5,0,10"/>

            <TextBlock Text="Player's damage:" FontSize="16"/>
            <TextBlock x:Name="PlayerDamageText" Text="1" FontSize="16"  Margin="0,5,0,20"/>

            <Button x:Name="UpgradeButton" Content="Upgrade" Width="120" Height="35"/>
        </StackPanel>
    </Grid>
</Window>